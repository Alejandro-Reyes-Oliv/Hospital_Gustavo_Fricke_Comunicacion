{
  "private": true,
  "name": "contacto-fricke-monorepo",
  "version": "0.0.0",
  "devDependencies": {
    "cross-env": "^10.1.0",
    "cross-env-shell": "^7.0.3",
    "dotenv-cli": "^11.0.0",
    "ngrok": "^5.0.0-beta.2",
    "npm-run-all": "^4.1.5",
    "standard": "^17.1.2"
  },
  "scripts": {
    "// dev por capa": "",
    "dev:back": "npm --prefix apps/backend run dev",
    "dev:front": "npm --prefix apps/frontend run dev",
    "dev:gateway": "npm --prefix apps/bot-gateway run dev",
    "// runners combinados": "",
    "dev:all": "npm-run-all -p dev:back dev:front dev:gateway",
    "dev:all:back+front": "npm-run-all -p dev:back dev:front",
    "// prisma (solo backend)": "",
    "prisma:migrate": "npm --prefix apps/backend run prisma:migrate",
    "prisma:generate": "npm --prefix apps/backend run prisma:generate",
    "// utilidades": "",
    "db:seed": "npm --prefix apps/backend run db:seed"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.87.4",
    "concurrently": "^9.2.1",
    "cron": "^4.3.4",
    "luxon": "^3.7.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "wait-on": "^9.0.3"
  }
}
